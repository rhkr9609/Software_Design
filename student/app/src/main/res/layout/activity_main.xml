<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="222dp"
        android:layout_height="242dp"
        android:src="@drawable/knulo" />

    <TextView
        android:id="@+id/center_textView4"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:text="" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="     email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="240dp" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="     password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="295dp" />

    <TextView
        android:id="@+id/center_textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emptyView_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="316dp"
            android:layout_height="30dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Signup"
             android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/emptyView_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

    </LinearLayout>

    <TextView
        android:id="@+id/center_textView"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:text="" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="316dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:text="LOGIN"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="343dp" />

    <TextView
        android:id="@+id/center_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/guide_textView"
        android:layout_width="242dp"
        android:layout_height="16dp"
        android:text="통합정보시스템(YES) 계정을 입력하세요."
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="391dp" />

</LinearLayout>
